<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container-fluid">
        <div id="header" class="row-fluid">
            <div id="title">
                <h1>@Html.Encode(Resources.Global.Company)</h1>
            </div>
        </div>
        <div id="" class="row-fluid">
            <div class="navbar">
                <div class="navbar-inner">
                    <div class="container-fluid">
                        <div class="nav-collapse">
                            <ul class="nav">
                                <li>
                                    @Html.ActionLink("Hrvatski jezik", "ChangeCulture", "Home", new { lang = "hr", returnUrl = this.Request.RawUrl }, null)
                                </li>
                                <li class="divider-vertical"></li>
                                <li>
                                    @Html.ActionLink("English language", "ChangeCulture", "Home", new { lang = "en", returnUrl = this.Request.RawUrl }, null)
                                </li>
                                <li class="divider-vertical"></li>
                                <li>
                                    <a href="/api/companies?type=xml">@Html.Encode(Resources.Global.Button_XML_Export)</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            @RenderBody()
        </div>
        <div id="footer" class="row-fluid">
        </div>
    </div>
</body>
</html>
